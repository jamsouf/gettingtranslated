{
    "bundles": [
        {
            "name": "webapp",
            "format": "php-array",
            "locales": {
                "en": "English",
                "de": "German",
                "ru": "Russian",
                "tr": "Turkish"
            },
            "resource": {
                "path": "/var/www/webapp/htdocs/resources/lang/{locale}/",
                "files": {
                    "newsletter.php": "newsletter",
                    "website.php": "website"
                }
            }
        }
    ]
}